<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2085"
    android:orientation="vertical"
    tools:context=".orderdetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/acceptlayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:id="@+id/accept"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:src="@drawable/done"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="Accepted"
                    android:textColor="#fff"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/packlayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:id="@+id/packed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/done"
                        android:visibility="invisible"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="Packed"
                    android:textColor="#fff"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:text="Order"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="32dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userproimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/profile"/>
                <TextView
                    android:id="@+id/userproname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:text="Name"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/orderid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:text="orderid"
                    android:textColor="#fff"
                    android:maxLines="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/outfordeliverylayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:id="@+id/outfordelivery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:src="@drawable/done" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="Out for delivery"
                    android:textColor="#fff"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/deliveredlayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:id="@+id/delivered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:src="@drawable/done"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="Delivered"
                    android:textColor="#fff"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@drawable/backgroundwhite">
        <TextView
            android:id="@+id/adressview"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="#000"
            android:textSize="19dp"
            android:text="Address"
            android:fontFamily="@font/abel"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/consumedproduct"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Total Amount:"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/totalamount"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Total Amount:"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="5dp"
                        android:textSize="18dp"
                        android:lines="1"/>


                </LinearLayout>


            </LinearLayout>
            </LinearLayout>

        </ScrollView>


        </LinearLayout>


    </LinearLayout>



